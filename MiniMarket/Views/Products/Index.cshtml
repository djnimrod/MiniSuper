@model IEnumerable<MiniMarket.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.TipoCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Provider.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagenQr)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="@item.Id">
        <td>
            @Html.DisplayFor(modelItem => item.Category.TipoCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Provider.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVencimiento)
        </td>
        @if (item.Foto != null)
         {
                <td>
                    <img height="100" width="100" src=@Url.Content(item.Foto) />
                </td>
        }
        else
        {
            <td>No hay Foto</td>
        }
        @if (item.ImagenQr != null)
         {
                <td>
                    <img height="100" width="100" src=@Url.Content(item.ImagenQr) />
                </td>
         }
        else
        {
            <td>No hay QR</td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
